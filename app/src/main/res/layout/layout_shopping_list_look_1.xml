<?xml version="1.0" encoding="utf-8"?>

<!-- Look for american shop in Dnepr -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/idLay1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/idLayTotalSumm"
        android:layout_weight="946"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewTovar"
            android:layout_width="400px"
            android:layout_height="500dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:src="@drawable/noimagefound"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/list_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="43"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_npp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/number_sign"
                    android:textColor="@color/text_list_header_look_1"
                    android:textSize="@dimen/text_list_header_look_1" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/product_name"
                    android:textColor="@color/text_list_header_look_1"
                    android:textSize="@dimen/text_list_header_look_1" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/amount"
                    android:textColor="@color/text_list_header_look_1"
                    android:textSize="@dimen/text_list_header_look_1" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/price"
                    android:textColor="@color/text_list_header_look_1"
                    android:textSize="@dimen/text_list_header_look_1" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/sum"
                    android:textColor="@color/text_list_header_look_1"
                    android:textSize="@dimen/text_list_header_look_1" />

                <TextView
                    android:id="@+id/textview_discount"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/discount"
                    android:textColor="@color/text_list_header_look_1"
                    android:textSize="@dimen/text_list_header_look_1" />

                <TextView
                    android:id="@+id/textview_to_pay"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/to_pay"
                    android:textColor="@color/text_list_header_look_1"
                    android:textSize="@dimen/text_list_header_look_1" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_list_header_underline"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/colorBlack" />

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="957"
                android:choiceMode="singleChoice"
                android:clickable="true"></ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idLayTotalSumm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="54"
        android:gravity="bottom|end"
        android:paddingBottom="0dp"
        android:background="@color/orange50"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10" />

        <!--       dummy, for compability only, must be in another layout_shopping_list_look_x.xml (visibility = gone) -->
        <TextView
            android:id="@+id/tv_TotalCount"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textview_total_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="@string/total"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="@dimen/text_total_look_1" />

        <TextView
            android:id="@+id/textview_sum_without_discount_end"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:paddingRight="10dp"
            android:text="12345678.99"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_discount_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="@string/discount"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="@dimen/text_total_look_1" />

        <TextView
            android:id="@+id/textview_discount_end_sum"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:paddingRight="10dp"
            android:text="12345678.99"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_to_pay_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="@string/to_pay"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="@dimen/text_total_look_1" />

        <TextView
            android:id="@+id/tv_TotalSumm"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="2"
            android:paddingRight="10dp"
            android:text="12345678.99"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>