        <!--Слой Дякую-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/idLayoutThanks"
        android:visibility="invisible"/>

        <!--Слой скидка,бонус, QR-код -->


        <!--Слой Информации-->

