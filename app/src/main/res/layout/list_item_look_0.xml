<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_height_look_0"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:minHeight="200px"
        android:orientation="horizontal">

        <!--    dummy, for compability only, must be in another list_item_look_x.xml (visibility = gone) -->
        <TextView
            android:id="@+id/textview_discount"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <!--    dummy, for compability only, must be in another list_item_look_x.xml (visibility = gone) -->
        <TextView
            android:id="@+id/textview_summ_without_discount"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/textview_npp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="1dp"
            android:gravity="center_horizontal|left"
            android:paddingLeft="1dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/red500"
            android:textSize="@dimen/list_item_text_look_0"
            tools:text="â„–" />

        <TextView
            android:id="@+id/textview_tovar"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal|left"
            android:paddingTop="10dp"
            android:textColor="@color/list_item_text_look_0"
            android:textSize="@dimen/list_item_text_look_0"
            tools:text="This is Tovar" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_vertical" />

        <TextView
            android:id="@+id/textview_Count"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_tovar"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:minWidth="200dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/list_item_text_look_0"
            android:textSize="@dimen/list_item_text_look_0"
            android:textStyle="bold"
            tools:text="10" />

        <TextView
            android:id="@+id/textview_Price"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_Count"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:minWidth="200dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:textAlignment="textEnd"
            android:textColor="@color/list_item_text_look_0"
            android:textSize="@dimen/list_item_text_look_0"
            android:textStyle="bold"
            tools:text="9999.99" />

        <TextView
            android:id="@+id/textview_Summ"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_Price"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:minWidth="200dp"
            android:paddingTop="10dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/list_item_text_look_0"
            android:textSize="@dimen/list_item_text_look_0"
            android:textStyle="bold"
            tools:text="9999.99" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_list_item_delimiter"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_item_delimiter_look_0" />

    <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone" />

</LinearLayout>