<?xml version="1.0" encoding="utf-8"?>

<!-- Look for Metro (Kiev subway) -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:background="#000000">

        <!--       dummy, for compability only, must be in another layout_shopping_list_look_x.xml (visibility = gone) -->
        <ImageView
            android:id="@+id/imageview_product"
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/list_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="140"
                android:orientation="vertical"
                tools:background="#CFCFCF">

                <LinearLayout
                    android:id="@+id/layout_info_header"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="65"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_date_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="-- ------- ---- --:--"
                        android:textColor="@color/list_header_text_look_2"
                        android:textSize="42sp" />

                    <TextView
                        android:id="@+id/textview_card_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:paddingStart="20dp"
                        tools:text="Картка № 000000000000"
                        android:textColor="@color/list_header_text_look_2"
                        android:textSize="38sp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/list_header_text_look_2" />

                <LinearLayout
                    android:id="@+id/layout_table_header"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="35"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:text="@string/number_sign"
                        android:textColor="@color/list_header_text_look_2"
                        android:textSize="@dimen/list_header_text_look_2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.7"
                        android:gravity="center"
                        android:text="@string/kind_of_service"
                        android:textColor="@color/list_header_text_look_2"
                        android:textSize="@dimen/list_header_text_look_2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:text="@string/balance"
                        android:textColor="@color/list_header_text_look_2"
                        android:textSize="@dimen/list_header_text_look_2" />

                    <!--     dummy, for compability only, must be in another layout_shopping_list_look_x.xml (visibility = gone) -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/cost"
                        android:textColor="@color/list_header_text_look_2"
                        android:textSize="@dimen/list_header_text_look_2" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_list_header_underline"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_item_divider_look_2" />

            <ListView
                android:id="@+id/listview_products"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="635"
                android:choiceMode="singleChoice"
                android:clickable="true"
                tools:listitem="@layout/list_item_look_2" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="225" />

        </LinearLayout>
    </LinearLayout>

    <!--       dummy, for compability only, must be in another layout_shopping_list_look_x.xml (visibility = gone) -->
    <!-- height designed to be 130px for 1280x800 screen -->
    <LinearLayout
        android:id="@+id/layout_total"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1587"
        android:visibility="gone">

        <!--    dummy, for compability only, must be in another layout_shopping_list_look_x.xml (visibility = gone) -->
        <TextView
            android:id="@+id/textview_total_discount"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!--     dummy, for compability only, must be in another layout_shopping_list_look_x.xml (visibility = gone) -->
        <TextView
            android:id="@+id/textview_total_sum_without_discount"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textview_total_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:paddingEnd="25dp"
            android:text="@string/total_products"
            android:textColor="@color/white"
            android:textSize="@dimen/total_text_look_2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingEnd="50dp"
            android:paddingBottom="5dp"
            android:text="@string/tools_dummy_4"
            android:textColor="@color/white"
            android:textSize="@dimen/total_text_num_look_2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_to_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:paddingEnd="25dp"
            android:text="@string/to_pay_colon"
            android:textColor="@color/white"
            android:textSize="@dimen/total_text_look_2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_total_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:paddingEnd="25dp"
            android:paddingBottom="5dp"
            android:text="@string/tools_dummy_6_dot_2"
            android:textColor="@color/white"
            android:textSize="@dimen/total_text_num_look_2"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>