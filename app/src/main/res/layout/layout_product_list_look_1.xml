<?xml version="1.0" encoding="utf-8"?>

<!-- Look for DMart shop in Dnepr -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/idLay1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="94125"
        android:orientation="horizontal">

        <!--       dummy, for compability only, must be in another layout_shopping_list_look_x.xml (visibility = gone) -->
        <ImageView
            android:id="@+id/imageview_product"
            android:layout_width="400px"
            android:layout_height="500dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/list_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4383"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_npp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="@string/number_sign"
                    android:textColor="@color/list_header_text_look_1"
                    android:textSize="@dimen/list_header_text_look_1" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.3"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/product_name"
                    android:textColor="@color/list_header_text_look_1"
                    android:textSize="@dimen/list_header_text_look_1" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/amount"
                    android:textColor="@color/list_header_text_look_1"
                    android:textSize="@dimen/list_header_text_look_1" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/price"
                    android:textColor="@color/list_header_text_look_1"
                    android:textSize="@dimen/list_header_text_look_1" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/sum"
                    android:textColor="@color/list_header_text_look_1"
                    android:textSize="@dimen/list_header_text_look_1" />

                <TextView
                    android:id="@+id/textview_discount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/discount"
                    android:textColor="@color/list_header_text_look_1"
                    android:textSize="@dimen/list_header_text_look_1" />

                <TextView
                    android:id="@+id/textview_to_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/to_pay"
                    android:textColor="@color/list_header_text_look_1"
                    android:textSize="@dimen/list_header_text_look_1" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_list_header_underline"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_item_divider_look_1" />

            <ListView
                android:id="@+id/listview_products"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:choiceMode="singleChoice"
                android:layout_weight="95617"
                android:clickable="true"
                android:footerDividersEnabled="true"
                android:divider="@color/list_item_divider_look_1"
                android:dividerHeight="1px"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idLayTotalSumm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5875"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|end"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20" />

        <!--       dummy, for compability only, must be in another layout_shopping_list_look_x.xml (visibility = gone) -->
        <TextView
            android:id="@+id/textview_total_count"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textview_total_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="@string/total"
            android:textColor="@color/white"
            android:textSize="@dimen/total_text_look_1" />

        <TextView
            android:id="@+id/textview_total_sum_without_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:paddingRight="10dp"
            android:text="12345678.99"
            android:textColor="@color/white"
            android:textSize="@dimen/total_text_num_look_1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_discount_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="@string/discount"
            android:textColor="@color/white"
            android:textSize="@dimen/total_text_look_1" />

        <TextView
            android:id="@+id/textview_total_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:paddingRight="10dp"
            android:text="12345678.99"
            android:textColor="@color/white"
            android:textSize="@dimen/total_text_num_look_1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_to_pay_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="@string/to_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/total_text_look_1" />

        <TextView
            android:id="@+id/textview_total_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="12345678.99"
            android:textColor="@color/white"
            android:textSize="@dimen/total_text_num_look_1"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>